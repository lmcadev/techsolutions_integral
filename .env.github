# Configuración de GitHub Actions para Despliegue Automático
# Variables de entorno que serán cargadas durante el despliegue

# Configuración del entorno
NODE_ENV=production
PORT=3000

# Configuración de la base de datos
PGHOST=db
PGPORT=5432
PGUSER=${DB_USER}
PGPASSWORD=${DB_PASSWORD}
PGDATABASE=${DB_NAME}
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# Configuración JWT (será reemplazada por el secret)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# Configuración CORS (será reemplazada por la IP del VPS)
FRONTEND_URL=http://${VPS_HOST}:8080

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad
BCRYPT_SALT_ROUNDS=12

# Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=combined